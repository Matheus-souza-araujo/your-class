{% extends "layout.njk" %}               

{% block content %}

<div class="card">
    <section 
        class= "avatar" 
        style= "background: url({{student.avatar_url}}) no-repeat center center /cover">
    </section>
    {# no repeat serve para não se repetir a imagem pelo card; o center center serve para alinha ao centro; o cover cobre toda a ideia do widht e height #}
    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Nome do Professor</div>
            <div>{{student.name}}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{student.age}}</div>
        </div>

        <div class="item">
            <div>Email</div>
            <div>{{student.email}}</div>
        </div>

        <div class="item">
            <div>Ano escolar</div>
            <div>{{student.ano}}</div>
        </div>

        <div class="item">
            <div>Carga horária</div>
            <div>{{student.charge}}</div>
        </div>


        <a href="/students/{{student.id}}/edit" class="button">Editar</a>
    </section>

</div>
{% endblock content %}
