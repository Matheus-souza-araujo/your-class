{% extends "layout.njk" %}               

{% block content %}

<div class="card table-container">
    <a href="/students/create">Novo</a>
   <table width ="100%">
       {# cabeçalho #}
       <thead>
           <tr> {# linha #}
               <th>Nome completo</th>
               <th>Ano escolar</th>{# colunas #}
               <th>Email</th>
               <th>Ação</th>
           </tr>
       </thead>
       {# corpo #}
       <tbody>
           {% for student in students%}
           <script>console.log("Cheguei")</script>
           <tr class="student">{# linha #}
               <td><span style="background-image: url({{student.avatar_url}}"></span>{{student.name}}</td>
                <td class="grades">{{student.year}}</td>
                <td>{{student.email}}</td>
                <td><a href="students/{{students.id}}">Ver</a></td>
           </tr>
           {% endfor %}
       </tbody>
   </table>
   <script src="/indexStudents.js"></script>
</div>
{% endblock content %}
