{% extends "layout.njk" %}               

{% block content %}

<div class="card">
    <section 
        class= "avatar" 
        style= "background: url({{teacher.avatar_url}}}) no-repeat center center /cover">
    </section>
    {# no repeat serve para n√£o se repetir a imagem pelo card; o center center serve para alinha ao centro; o cover cobre toda a ideia do widht e height #}
    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Nome do Professor</div>
            <div>{{teacher.name}}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{teacher.age}}</div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>{{teacher.blood}}</div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>{{ "Online" if teacher.type == "O" else "Presencial"}}</div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            {% for acompanhamentos in teacher.acompanhamento%}
            <span>{{acompanhamentos}}</span>
            {% endfor %}
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>

    </section>

</div>
{% endblock content %}
